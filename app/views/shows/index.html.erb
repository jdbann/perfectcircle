<h1>Upcoming Productions</h1>
<% @shows.each do |show| %>
<h2><%= link_to show.title, show %> <span class="subtitle"><%=h show.author %> - <%=h show.author_date %></span></h2>
<%= raw RedCloth.new(show.body).to_html %>
<% if current_user %><p class="details"><%= link_to 'Show', show %> | <%= link_to 'Edit', edit_show_path(show) %> | <%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></p><% end %>
<% end %>
<% if @shows.empty? %>
<p>Watch this space!</p>
<% end %>

<h1>Past Productions</h1>
<% @past_shows.each do |show| %>
<h2><%= link_to show.title, show %> <span class="subtitle"><%=h show.author %> - <%=h show.author_date %></span></h2>
<%= raw RedCloth.new(show.body).to_html %>
<% if current_user %><p class="details"><%= link_to 'Show', show %> | <%= link_to 'Edit', edit_show_path(show) %> | <%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></p><% end %>
<% end %>
<% if @past_shows.empty? %>
<p>None!</p>
<% end %>

<% if current_user %><p class="details"><%= link_to 'New show', new_show_path %></p><% end %>