<% @news.each do |news| -%>
<%= render :partial => 'post', :object => news %>
<% if current_user -%>
  <p class="details"><%= link_to 'Edit', edit_news_path(news) %> | <%= link_to 'Destroy', news_path(news), data: { confirm: 'Are you sure?'}, method: :delete %></p>
<% end -%>
<% end -%>

<% if current_user -%>
<p><%= link_to 'New news', new_news_path %></p>
<% end -%>
