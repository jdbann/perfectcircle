<h1><%= @album.title %> <span class="subtitle"><%= @album.date %></span></h1>

<% @album.photos.each do |photo| %>
<%= link_to image_tag(photo.photo.url(:thumb), :class => "g"), photo_path(photo) %>
<% end %>
<p class="details"><% if current_user %><%= link_to 'Edit', edit_album_path(@album) %> | <% end %><%= link_to 'Back', albums_path %></p>