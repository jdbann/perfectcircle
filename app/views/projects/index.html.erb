<h1>Upcoming Projects</h1>

<% @projects.each do |project| %>
<h2><%= link_to project.title, project %> <span class="subtitle"><%= project.location %> - <%= project.project_date %></span></h2>

<%= raw RedCloth.new(project.body).to_html %>

<% if current_user %><p class="details"><%= link_to 'Edit', edit_project_path(project) %> - <%= link_to 'Destroy', project, data: { confirm: 'Are you sure?'}, method: :delete %></p><% end %>
<% end %>

<h1>Past Projects</h1>
<% @past_projects.each do |project| %>
<h2><%= link_to project.title, project %> <span class="subtitle"><%= project.location %> - <%= project.project_date %></span></h2>

<%= raw RedCloth.new(project.body).to_html %>

<% if current_user %><p class="details"><%= link_to 'Edit', edit_project_path(project) %> - <%= link_to 'Destroy', project, data: { confirm: 'Are you sure?' }, method: :delete %></p><% end %>
<% end %>

<% if current_user %><p class="details"><%= link_to 'New projects', new_project_path %></p><% end %>
