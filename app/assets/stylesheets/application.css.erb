body {
	text-align: center;
	font: 12px Tahoma, Verdana, Arial, sans-serif;
	line-height: 16px;
}

a {
	color: #429cce;
}

a:hover {
	color: #454357;
}

h1 {
	font-size: 32px;
	line-height: 26px;
	color: #454357;
	margin: 16px -8px 0px -8px;
	padding: 11px 8px 0px 8px;
	background-color: #429cce;
	font-weight: normal;
}

h1 a, h2 a {
	color: #454357;
	text-decoration: none;
}

h1 a:hover, h2 a:hover {
	border-bottom: 1px #454357 solid;
}

h1 .subtitle {
	font-size: 16px;
	line-height: 14px;
	font-weight: normal;
}

h2 {
	font-size: 20px;
	color: #454357;
	margin: 16px -8px 0 -8px;
	padding: 7px 8px 0px 8px;
	background-color: #93C6E3;
	font-weight: normal;
}

h2 .subtitle {
	font-size: 12px;
	line-height: 11px;
}

h3 {
	font-size: 16px;
	line-height: 14px;
	color: #454357;
	margin: 16px -8px 0 -8px;
	padding: 3px 8px 0 8px;
	background: #6BB1D8;
	font-weight: normal;
}

p {
	margin-top: 8px;
	padding: 0 8px;
	text-align: justify;
	font-size: 12px;
	line-height: 16px;
}

img.left {
	float: left;
	margin: 8px 8px 0 0;
	padding: 0;
}

img.right {
	float: right;
	margin: 0 0 8px 0;
	padding: 0;
}

p.details {
	text-align: right;
	font-size: 10px;
	color: #454357;
	clear: both;
}

p.copy {
	text-align: right;
	font-size: 10px;
	color: #454357;
	width: 480px;
	margin: 0 auto 20px auto;
}

#page {
	width: 550px;
	margin: 40px auto 0 auto;
	padding: 0 0 -100px 0;
	text-align: left;
	background-image: url(<%= image_path 'back.gif' %>);
	background-repeat: repeat-y;
}

#header {
	width: 550px;
	height: 75px;
	background-image: url(<%= image_path 'back_top.gif' %>);
}

#footer {
	background-image: url(<%= image_path 'back_bottom.gif' %>);
	width: 550px;
	height: 75px;
	margin-top: -44px;
}

#content {
	margin: -40px 35px 0px 35px;
	padding: 8px;
}

img.logo {
	float: right;
	margin: -8px;
}

.nav {
	list-style-type: none;
	padding: 0;
	margin: 0;
	height: 163px;
}

table.cast {
	margin: 0 auto;
}

td.title {
	text-align: center;
	font-weight: bold;
	font-size: 14px;
}

td.crew {
	text-align: center;
}

td.left {
	text-align: right;
	font-weight: bold;
	width: 160px;
}

td.right {
	text-align: left;
	width: 160px;
}

.nobullet li {
	list-style-type: none;
}

img.g {
	width: 96px;
	height: 96px;
	display: block;
	float: left;
	margin-top: 20px;
	margin-left: 8px;
	margin-right: 12px;
}

img.full {
	display: block;
	margin: 0 auto;
}